{
  "$schema": "https://json.schemastore.org/staticwebapp.config.json",
  "routes": [
    {
      "route": "/api/sessions",
      "methods": ["POST"],
      "allowedRoles": ["teacher"]
    },
    {
      "route": "/api/sessions/*/seed-entry",
      "methods": ["POST"],
      "allowedRoles": ["teacher"]
    },
    {
      "route": "/api/sessions/*/reseed-entry",
      "methods": ["POST"],
      "allowedRoles": ["teacher"]
    },
    {
      "route": "/api/sessions/*/end",
      "methods": ["POST"],
      "allowedRoles": ["teacher"]
    },
    {
      "route": "/api/sessions/*/start-exit-chain",
      "methods": ["POST"],
      "allowedRoles": ["teacher"]
    },
    {
      "route": "/api/sessions/*/reseed-exit",
      "methods": ["POST"],
      "allowedRoles": ["teacher"]
    },
    {
      "route": "/api/sessions/*/start-early-leave",
      "methods": ["POST"],
      "allowedRoles": ["teacher"]
    },
    {
      "route": "/api/sessions/*/stop-early-leave",
      "methods": ["POST"],
      "allowedRoles": ["teacher"]
    },
    {
      "route": "/api/sessions/*/late-qr",
      "methods": ["GET"],
      "allowedRoles": ["teacher"]
    },
    {
      "route": "/api/sessions/*/early-qr",
      "methods": ["GET"],
      "allowedRoles": ["teacher"]
    },
    {
      "route": "/api/sessions/*/attendance",
      "methods": ["GET"],
      "allowedRoles": ["teacher"]
    },
    {
      "route": "/api/sessions/*/dashboard/negotiate",
      "methods": ["POST"],
      "allowedRoles": ["teacher"]
    },
    {
      "route": "/api/sessions/*",
      "methods": ["GET"],
      "allowedRoles": ["teacher"]
    },
    {
      "route": "/api/scan/chain",
      "methods": ["POST"],
      "allowedRoles": ["student"]
    },
    {
      "route": "/api/scan/late-entry",
      "methods": ["POST"],
      "allowedRoles": ["student"]
    },
    {
      "route": "/api/scan/early-leave",
      "methods": ["POST"],
      "allowedRoles": ["student"]
    },
    {
      "route": "/api/scan/exit-chain",
      "methods": ["POST"],
      "allowedRoles": ["student"]
    },
    {
      "route": "/api/sessions/*/join",
      "methods": ["POST"],
      "allowedRoles": ["student"]
    },
    {
      "route": "/api/ai/session-summary",
      "methods": ["POST"],
      "allowedRoles": ["teacher"]
    },
    {
      "route": "/api/ai/stall-advice",
      "methods": ["POST"],
      "allowedRoles": ["teacher"]
    },
    {
      "route": "/api/*",
      "allowedRoles": ["authenticated"]
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*", "/*.{css,scss,js,png,gif,ico,jpg,jpeg,svg,webp,woff,woff2,ttf,eot}"]
  },
  "responseOverrides": {
    "401": {
      "redirect": "/.auth/login/aad",
      "statusCode": 302
    },
    "403": {
      "statusCode": 403,
      "rewrite": "/403.html"
    },
    "404": {
      "statusCode": 404,
      "rewrite": "/404.html"
    }
  },
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": {
        "registration": {
          "openIdIssuer": "https://login.microsoftonline.com/8ff7db19-435d-4c3c-83d3-ca0a46234f51/v2.0",
          "clientIdSettingName": "AAD_CLIENT_ID",
          "clientSecretSettingName": "AAD_CLIENT_SECRET"
        },
        "login": {
          "loginParameters": ["scope=openid profile email"]
        },
        "userDetailsClaim": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name"
      }
    }
  },
  "globalHeaders": {
    "content-security-policy": "default-src 'self' https:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https://*.signalr.net wss://*.service.signalr.net https://*.table.core.windows.net https://login.microsoftonline.com;",
    "X-Content-Type-Options": "nosniff",
    "X-Frame-Options": "DENY",
    "X-XSS-Protection": "1; mode=block",
    "Referrer-Policy": "strict-origin-when-cross-origin",
    "Permissions-Policy": "camera=(self), geolocation=(self), microphone=()"
  },
  "mimeTypes": {
    ".json": "application/json",
    ".js": "text/javascript",
    ".mjs": "text/javascript",
    ".css": "text/css",
    ".svg": "image/svg+xml",
    ".png": "image/png",
    ".jpg": "image/jpeg",
    ".jpeg": "image/jpeg",
    ".webp": "image/webp",
    ".woff": "font/woff",
    ".woff2": "font/woff2",
    ".ttf": "font/ttf",
    ".eot": "application/vnd.ms-fontobject"
  },
  "platform": {
    "apiRuntime": "node:22"
  },
  "trailingSlash": "auto",
  "networking": {
    "allowedIpRanges": []
  }
}
